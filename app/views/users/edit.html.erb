<div class='container'>
  <div class='edit'>
    <h1>ユーザー設定</h1>
    <%= form_with model: @user, url: user_path(@current_user.id) , method: :put, local: true do |form| %>
    <div class='edit item'>
      <%= form.label :page, '名前' %>
      <%= text_field :page, :name, value: @user.name %>
    </div>
    <div class='esit item'>
      <%= form.label :page , '古いパスワード' %>
      <%= form.password_field :old_password %>
    </div>
    <div class='edit item'>
      <%= form.label :page , '新しいパスワード' %>
      <%= form.password_field :new_password1 %>
    </div>
    <div class='edit item'>
      <%= form.label :page , '新しいパスワードをもう一度' %>
      <%= form.password_field :new_password2 %>
    </div>
    <%= render :partial => "templates/errmessage"%>
      <%= form.submit '保存', class: 'btn btn-success'%>
    <% end %>
  </div>
</div>
