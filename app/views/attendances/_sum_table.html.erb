<div class='table'>
<table class='table table-condensed table-bordered table-sm'>
</div>
  <thead class='thead-light'>
    <tr class='text-center'>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[0] %></th>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[1]%></th>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[2]%></th>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[3]%></th>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[4]%></th>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[5]%></th>
      <th><%= label :page, I18n.t(:sum, scope: :table_header)[6]%></th>
    </tr>
  </thead>
  <tbody>
    <tr class='text-center'>
      <% if @attendance_table.count != 0 %>
        <th><%= @attendance_table.select{ |data| data.status == 'work'}.count %></th>
        <th><%= convert_min(@attendance_table.map{|x| calculate_working_time(x, x.work_date)}.inject(:+)) %></th>
        <th><%= convert_min(@attendance_table.map{|x| calculate_break_time(x, x.work_date) }.inject(:+))%></th>
        <th><%= @vacation_count %></th>
        <th><%= @attendance_table.select{ |data| data.status == 'holiday_work'}.count %></th>
        <th><%= @attendance_table.select{ |data| data.status == 'absence'}.count %></th>
        <th><%= month_holiday_count(@first_month) %></th>
      <% end %>
    </tr>
  </tbody>
</table>
