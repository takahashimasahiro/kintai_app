<div id='modalDialog' class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t '.title' %></h5>
        <button type="button" id='closeButton' class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= t '.description' %></p>
        <%# TODO: 必須入力にするかどうか検討 %>
        <%= text_field :apply, :reason %>
      </div>
      <div class="modal-footer">
        <button type="button" id='applyButton' class="btn btn-primary"><%= t '.to_apply'%></button>
        <button type="button" id='cancelButton' class="btn btn-secondary" data-dismiss="modal"><%= t '.cancel' %></button>
      </div>
    </div>
  </div>
</div>