<!DOCTYPE html>
<html>
  <head>
    <title>Kintai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application' %>
    <%= stylesheet_pack_tag params[:controller] %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag params[:controller] %>
</head>
  <body>
    <% if @current_user %>
      <div class="row">
        <div class="col-sm-3 sidebar open">
          <div class="row sidebar-header header-cover" >
            <ul class="col-md-7 user-profile">
              <li class="profile-profile"><%= label :page ,'プロフィール' %></li>
              <li class="profile-username"><%= label :page ,@current_user.name %></li>
              <li class="profile-email"><%= label :page ,@current_user.email %></li>
              <li class="profile-holidaycount">残有休数: <%= label :page ,@current_user.paid_holiday_count %></li>
            </ul>
          </div>
          <div class="list-group">
            <a href="/attendances/<%=@current_user.id%>" class="list-group-item list-group-item-action list-group-item-light">出勤状況一覧
              <span class="badge badge-primary badge-pill"></span>
            </a>
            <a href="/users/" class="list-group-item list-group-item-action list-group-item-light">出勤者リスト
              <span class="badge badge-primary badge-pill"></span>
            </a>
            <a href="/holidays/<%=@current_user.id%>" class="list-group-item list-group-item-action list-group-item-light">有休休暇申請
              <span class="badge badge-primary badge-pill"></span>
            </a>
            <a href="/users/<%=@current_user.id%>/edit" class="list-group-item list-group-item-action list-group-item-light">ユーザー設定
              <span class="badge badge-primary badge-pill"></span>
            </a>
            <% if @current_user.role == 'owner' %>
            <a href="/users/<%=@current_user.id%>" class="list-group-item list-group-item-action list-group-item-light">ユーザー管理
              <span class="badge badge-primary badge-pill"></span>
            </a>
            <% end %>
            <a href="/sessions/new" class="list-group-item list-group-item-action list-group-item-light">ログアウト
              <span class="badge badge-primary badge-pill"></span>
            </a>
          </div>
        </div>
        <%= render partial: "templates/flash",locals: {class_name: "flash-login"} %>
        <div class="col-sm-9 wrapper-login">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= render partial: "templates/flash",locals: {class_name: "flash-logout"} %>
      <div class="wrapper-logout">
        <%= yield %>
      </div>
    <% end %>
  </body>
</html>
