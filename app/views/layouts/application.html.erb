<!DOCTYPE html>
<html>
  <head>
    <title>Kintai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application' %>
    <%= stylesheet_pack_tag params[:controller] %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag params[:controller] %>
</head>
<body>
<% if @current_user %>
  <div class="row">
    <div class="col-sm-3 sidebar open">
      <div class="row sidebar-header header-cover" >
        <div class="col-sm-5 sidebar-image">
          <%# TODO アイコン関係入れるかどうか %>
          <%# <img src=""> %>
        </div>
        <div class="col-md-7 user-profile">
          <ul class="profile-profile">プロフィール</ul>
          <ul class="profile-username"><%= @current_user.name %></ul>
          <ul class="profile-userid"><%= @current_user.user_id %></ul>
          <ul class="profile-email"><%= @current_user.email %></ul>
        </div>
      </div>
      <div class="sidebar-menu">
        <div class="sidebar-nav">
          <a class="row" href="/users/home">
            <p class="col-sm-9">出勤状況一覧</p>
            <span class="col-sm-3 sidebar-badge"></span>
          </a>
          <a class="row" href="/users/home">
            <p class="col-sm-9">出勤者リスト</p>
            <span class="col-sm-3 sidebar-badge"></span>
          </a>
          <a class="row" href="/users/home">
            <p class="col-sm-9">有給休暇申請</p>
            <span class="col-sm-3 sidebar-badge">12</span>
          </a>
          <a class="row" href="/users/home">
            <p class="col-sm-9">ユーザー設定</p>
            <span class="col-sm-3 sidebar-badge"></span>
          </a>
          <a class="row" rel="nofollow" href="../logout">
            <p class="col-sm-9">ログアウト</p>
            <span class="col-sm-3 sidebar-badge"></span>
          </a>
        </div>
      </div>
    </div>
    <% if flash[:notice] %>
      <div class="flash-login">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="col-sm-9 wrapper-login">
        <%= yield %>
    </div>
    <% else %>
      <% if flash[:notice] %>
        <div class="flash-logout">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div class="wrapper-logout">
        <%= yield %>
      </div>
    <% end %>
  </div>
</body>
</html>
